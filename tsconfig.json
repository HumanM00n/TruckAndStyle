{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["next-auth"],
    "allowJs": true,
    "noUnusedLocals": false, // Retire la remontée des erreurs lorsqu'un variable n'est pas utilisée.
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/_lib/db.ts", "app/_hooks/useBooking.js", "app/api/users/route.ts", "app/api/auth/[...nextauth].ts"],
  "exclude": ["node_modules"]
}
